<% 
  # read view_count from model cache if model has been cached.
  view_count = @article.view_count
  if b = WxArticle.read_second_level_cache(@article.id)
    view_count = b.view_count
  end
%>
<style>
	.info .views, .info .like{
		color:grey;
		font-size:14px;
		padding-left:10px;
	}
</style>



<div class="content-padded rich_content">
	<%=raw @article.content%>
</div>
<div class="info pull-right">
     <span class="views" title="浏览次数"><i class="fa fa-eye"></i><%= view_count %>次浏览</span>

 </div>
