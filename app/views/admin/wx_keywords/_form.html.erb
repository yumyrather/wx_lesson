<%=render 'shared/error_messages',:target=>@keyword%>

<%=simple_form_for([:admin,@keyword],:html=>{:class=>"form-horizontal"}) do |f|%>
	<%= f.input :keyword,:input_html=>{:class=>"form-control"}%>	
	
	<% f.input :keyword_type,:input_html=>{:class=>"form-control"},:collection=>WxKeyword::REPLY_TYPES,:include_blank=>false%>
	
	<%= f.input :hidden,:input_html=>{:class=>"form-control"}%>
	
	<div class="form-actions">
		<%=link_to "返回列表", admin_wx_keywords_path,:class=>"btn"%>
		<button type="submit" class="btn btn-primary pull-right">保存</button> 
	</div> <!-- /form-actions -->
<%end%>
