<%= content_for :title do %>
	关键字设置
<% end %>

<%=render 'header_nav'%>




<div class="box">
	<div class="box-header">
	   <h3 class="box-title">关键字-<%=@keyword.keyword%>
     </h3>

	</div><!-- /.box-header -->
	<div class="box-body">
    <div class="row">
        <div class="col-md-12">
					<table class="table">
						<thead>
							<tr>
								<td>图文标题</td>
								<td>图文简介</td>
								<td><%=link_to "设置回复消息",wx_article_list_admin_wx_keyword_path(@keyword)%></td>
							</tr>
						</thead>
						<tbody>
							<%@keyword.wx_articles.each do |article|%>
							<tr>
								<td><%=article.title%></td>
								<td><%=article.breif%></td>
								<td></td>
							</tr>
							<%end%>
						</tbody>
					</table>
				</div>	
			</div>
			
		
	</div>
</div>


<div class="row">
	<div class="btn-group pull-left">
		<%=link_to "返回列表",admin_wx_keywords_path,:class=>"btn"%>
	
	</div>
	<div class="btn-group pull-right">
		<%=link_to "编辑",edit_admin_wx_keyword_path(@keyword),:class=>"btn"%>
		<%=link_to "删除",[:admin,@keyword],:method=>:delete,:class=>"btn btn-danger"%>
	</div>
</div>
