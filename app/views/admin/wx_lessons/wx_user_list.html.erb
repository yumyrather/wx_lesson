<%= content_for :title do %>
	课程主题
<% end %>

<%=render 'header_nav'%>
<div class="box">
	<div class="box-header">
	   <h3 class="box-title">会员服务主题 - <%=@lesson.title%>
     </h3>

	</div><!-- /.box-header -->
	<div class="box-body">
    <div class="row">
        <div class="col-md-4">
					<b>封面:</b>
	
					<%if @lesson.cover %>
						<%=image_tag @lesson.cover_url(:normal)%>
					<%end%>
	

						<b>创建文档时间</b>:
						<p><%=l @lesson.created_at %></p>
						<b>最后编辑时间</b>:
						<p><%=l @lesson.updated_at %></p>	
				</div>
				
        <div class="col-md-8">
					
						<b>订阅人数:</b><%=@lesson.wx_lesson_user_records.size%><br/>
						
						<table class="table">
							<thead>
								<tr>
									<th>用户姓名</th>
									<th>学习进度</th>
									<th>最近签到</th>
									<th>初期订阅</th>
								</tr>
							</thead>
							<%@records.each do |record|%>
								<tr>
									<td><%=record.try(:wx_user).try(:name)%></td>
									<td><%=record.now_chatpter%></td>
									<td><%=l record.updated_at %></td>
									<td><%=l record.created_at %></td>
								</tr>
							<%end%>
							<tbody>
								
						</table>
				</div>	
				
		
			</div>
			
		
	</div>
</div>


<div class="row-fluid">
	<div class="btn-group pull-left">
		<%=link_to "返回列表",admin_wx_lessons_path,:class=>"btn"%>
	
	</div>

</div>