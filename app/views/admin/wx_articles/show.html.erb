<%= content_for :title do %>
	微信图图文消息
<% end %>



<div class="box">
	<div class="box-header">
	   <h3 class="box-title">标题-<%=@article.title%>
     </h3>

	</div><!-- /.box-header -->
	<div class="box-body">
    <div class="row">
        <div class="col-md-4">
					<b>封面:</b>
	
					<%if @article.cover %>
						<%=image_tag @article.cover_url(:normal)%>
					<%end%>
	
						<b>分配关键字:</b>
						<%@article.wx_keyword_items.each do |item|%>
							<%=link_to item.wx_keyword.keyword,[:admin,item.wx_keyword]%><br/>
						<%end%>
						<b>创建文档时间</b>:
						<p><%=l @article.created_at %></p>
						<b>最后编辑时间</b>:
						<p><%=l @article.updated_at %></p>	
				</div>
				
        <div class="col-md-8">
						<b>简介</b><br/>
						<p><%=@article.breif%></p>
						
						<b>正文</b><br/>
					<%=raw @article.content%>
				</div>	
				
		
			</div>
			
		
	</div>
</div>


<div class="row">
	<div class="btn-group pull-left">
		<%=link_to "返回列表",admin_wx_articles_path,:class=>"btn"%>
	
	</div>
	<div class="btn-group pull-right">
		<%=link_to "编辑",edit_admin_wx_article_path(@article),:class=>"btn"%>
		<%=link_to "删除",[:admin,@article],:method=>:delete,:class=>"btn btn-danger"%>
	</div>
</div>
