


 <div class="form-box" id="login-box">
      <div class="header">新用户注册</div>
			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="body bg-gray">
              <div class="form-group">
						    <%= f.input :email, required: true,:input_html=>{:class=>"form-control"}, autofocus: true %>
	
              </div>
              <div class="form-group">
						    <%= f.input :password,:input_html=>{:class=>"form-control"}, required: true %>
              </div>
              <div class="form-group">
						    <%= f.input :password_confirmation,:input_html=>{:class=>"form-control"}, required: true %>
              </div>

          </div>
          <div class="footer">                    

              <button type="submit" class="btn bg-olive btn-block">注册</button>

              <a href="sign_in" class="text-center">返回登陆</a>
          </div>
					<% end %>

   
  </div>