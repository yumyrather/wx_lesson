

<div class="form-box" id="login-box">
    <div class="header">登陆</div>


		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		
        <div class="body bg-gray">
	
					<div class="alert alert-danger alert-dismissable">
						<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					 	<%=flash[:alert]%>
					</div>
					
            <div class="form-group">
					    <%= f.input :email, required: false,:input_html=>{:class=>"form-control"},autofocus: true %>
	
            </div>
            <div class="form-group">
					    <%= f.input :password,:input_html=>{:class=>"form-control"}, required: false %>
	
            </div>

            <div class="form-group">
                <input type="checkbox" name="user[remember_me]"/> 记住登陆
            </div>


        </div>
        <div class="footer">                                                               
            <button type="submit" class="btn bg-olive btn-block">登陆</button>  
            
        </div>
				<% end %>

</div>